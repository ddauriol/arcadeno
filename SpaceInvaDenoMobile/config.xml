<?xml version='1.0' encoding='utf-8'?>
<widget id="io.ddauriol.spaceinvadeno" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SpaceInvaDenoMobile</name>
    <description>
        Game inspirado no Classico do Arcade Space Invaders. Representa a luta do Deninho contra as plataformas de hospedagem de código-fonte e as constantes mudanças do RUST. O grande inimigo é Node.
    </description>
    <author email="ddauriol@gmail.com" href="http://ddauriol.github.io">
        Full Deno Brazil
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <icon src="res/icon.png"/>
</widget>
